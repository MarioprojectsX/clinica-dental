---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";

const alternates = {
  es: "/es/blog",
  ca: "/ca/blog",
  en: "/en/blog",
};
---

